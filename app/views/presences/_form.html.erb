<div class="container">
  <div class="container-form">
    <div class="row justify-content-md-center">
      <div class="col-12 align-items-center">
      <h2>La présence de <%= @invite.first_name.capitalize %> à notre mariage</h2>
      </div>
      <div class="col-12 col-sm-6 col-md-8 text-center">
        <div class="form-inputs">

          <%= simple_form_for [@user, @invite, @presence],
                wrapper: :horizontal_form,
                wrapper_mappings: {
                  boolean:       :horizontal_boolean,
                  check_boxes:   :horizontal_collection_inline,
                  date:          :horizontal_multi_select,
                  datetime:      :horizontal_multi_select,
                  file:          :horizontal_file,
                  radio_buttons: :horizontal_collection_inline,
                  range:         :horizontal_range,
                  time:          :horizontal_multi_select
                } do |f| %>
          <%= f.error_notification %>
          <%= f.input :mariage,label: "presence mariage (samedi soir)", as: :radio_buttons, error: 'obligatoire' %>
          <%= f.input :nuit_samedi, label: "presence nuit du samedi(nuit dans le gîte)", as: :radio_buttons, error: 'obligatoire'%>
          <% if @invite.allowedbefore == true %>
          <%= f.input :nuit_jeudi, label:  "presence nuit du jeudi (nuit dans le gîte)", as: :radio_buttons %>
          <%= f.input :nuit_vendredi, label:  "presence nuit du vendredi (nuit dans le gîte)", as: :radio_buttons %>
          <% end %>
            <%= f.button :submit, class: "btn btn-ghost" %>

        </div>
        <% end %>
      </div>
    </div>
  </div>

</div>