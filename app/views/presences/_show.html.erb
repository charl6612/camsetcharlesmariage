<div class="card-product">
  <!-- <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" /> -->
  <div class="card-product-infos">
    <h2>
      <%= invite.first_name.upcase %>
      EST INVITE(E)
      <% if invite.child == true %>
      <i class="fas fa-baby"></i>
      <% end %>
    </h2>
    <%= simple_form_for [user, invite, presence],
      wrapper: :horizontal_form,
      wrapper_mappings: {
        boolean:       :horizontal_boolean,
        check_boxes:   :horizontal_collection_inline,
        date:          :horizontal_multi_select,
        datetime:      :horizontal_multi_select,
        file:          :horizontal_file,
        radio_buttons: :vertical_collection_inline,
        range:         :horizontal_range,
        time:          :horizontal_multi_select
      } do |f| %>
    <%= f.error_notification %>
    <div class="card-details d-flex">
      <% if invite.allowedbefore == true %>
      <div class="bloc2 mr-5">
        <%= f.input :nuit_jeudi, label:  "Nuit du jeudi", as: :radio_buttons %>
        <%= f.input :nuit_vendredi, label: "Nuit du vendredi", as: :radio_buttons %>
      </div>
      <% end %>
      <div class="bloc1">
        <%= f.input :mariage,label: "SoirÃ©e mariage", as: :radio_buttons%>
        <%= f.input :nuit_samedi, label: "Nuit du samedi", as: :radio_buttons%>
      </div>
    </div>
    <%= f.button :submit, class: "btn-outline-dark mb-3" %>
    <% end %>
  </div>
</div>