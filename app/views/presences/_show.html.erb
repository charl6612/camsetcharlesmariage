    <div class="card">
      <h5 class="card-header"><%= invite.first_name.capitalize %>
        <% if invite.child == true %>
          <i class="fas fa-baby"></i>
        <% end %>
      </h5>
      <%= link_to '',  user_invite_path(user,invite),  method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-suppr fas fa-user-times" %>
      <div class="card-body">
        <h5 class="card-title">Presence au mariage</h5>
        <%= simple_form_for [user, invite, presence],
      wrapper: :horizontal_form,
      wrapper_mappings: {
        boolean:       :horizontal_boolean,
        check_boxes:   :horizontal_collection_inline,
        date:          :horizontal_multi_select,
        datetime:      :horizontal_multi_select,
        file:          :horizontal_file,
        radio_buttons: :horizontal_collection_inline,
        range:         :horizontal_range,
        time:          :horizontal_multi_select
      } do |f| %>
          <%= f.error_notification %>
          <%= f.input :mariage,label: "presence mariage (samedi soir)", as: :radio_buttons %>
          <%= f.input :nuit_samedi, label: "presence nuit du samedi(nuit dans le gîte)", as: :radio_buttons%>
          <% if invite.allowedbefore == true %>
            <%= f.input :nuit_jeudi, label:  "presence nuit du jeudi (nuit dans le gîte)", as: :radio_buttons %>
            <%= f.input :nuit_vendredi, label:  "presence nuit du vendredi (nuit dans le gîte)", as: :radio_buttons %>
          <% end %>
        </div>
        <%= f.button :submit, class: "btn-outline-dark mb-3" %>
      <% end %>
    </div>
