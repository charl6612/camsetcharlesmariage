<div class="container">
  <div class="container-form">

<h2>Changer mon mot de passe</h2>
<p class="text-center">En cas de difficulté ou d'erreur, <%= link_to 'rendez-vous ici', new_user_password_url() %> et saisissez votre adresse mail pour recevoir un nouveau mail de réinitialisation de votre mot de passe.</p>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: "Nouveau mot de passe",
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "Nouveau mot de passe" } %>
    <%= f.input :password_confirmation, label: "Confirmer le mot de passe", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Valider mon mot de passe" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
    </div>