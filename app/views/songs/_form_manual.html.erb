    <div class="container">
        <div class="row justify-content-md-center">
          <div class="col-12 align-items-center">
          </div>
          <div class="col-12 col-sm-6 col-md-8 text-center">
            <div class="form-inputs">
              <% if current_page?(controller: :songs, action: :new) %>
                <%= simple_form_for [@song], :url=>"search",
      wrapper: :horizontal_form,
      wrapper_mappings: {
        boolean:       :horizontal_boolean,
        check_boxes:   :horizontal_collection_inline,
        date:          :horizontal_multi_select,
        datetime:      :horizontal_multi_select,
        file:          :horizontal_file,
        radio_buttons: :vertical_collection_inline,
        range:         :horizontal_range,
        time:          :horizontal_multi_select
      } do |f| %>
                        <%= f.error_notification %>
                  <%= f.input :artist, label: "Artiste" %>
                  <%= f.input :title, label: "Titre" %>
                  <%= f.button :submit, "Rechercher", class: "btn btn-primary" %>
                <% end %>
                <% else %>
                  <%= simple_form_for [@song],
      wrapper: :horizontal_form,
      wrapper_mappings: {
        boolean:       :horizontal_boolean,
        check_boxes:   :horizontal_collection_inline,
        date:          :horizontal_multi_select,
        datetime:      :horizontal_multi_select,
        file:          :horizontal_file,
        radio_buttons: :vertical_collection_inline,
        range:         :horizontal_range,
        time:          :horizontal_multi_select
      } do |f| %>
                        <%= f.error_notification %>
                  <%= f.input :artist, label: "Artiste" %>
                  <%= f.input :title, label: "Titre" %>
                  <%= f.button :submit, "Ajouter manuellement", class: "btn btn-primary" %>
                <% end %>

                                  <% end %>

              </div>
            </div>
          </div>
      </div>
