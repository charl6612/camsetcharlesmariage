    
    <div class="container" id="playlist">
      <h2>MES SONGS</h2>
      <%= link_to 'New', new_song_path(), class: "btn btn-dark"  %>
      <ul>
        <% @user.songs.each do |song| %>
          <li>
            <%= song.title%>
            -
            <%= song.artist%>
            <% unless song.url.nil?%>
            <%= link_to " ", "#{song.url}", target: "_blank", class: "btn btn-outline-info btn-sm fas fa-info" %>
            <% end %>
                          <%= link_to ' ', song_path(song), method: :delete, class: "btn btn-outline-danger fa fa-trash btn-sm" %>

          </li>
        <% end %>
      </ul>
    </div>
