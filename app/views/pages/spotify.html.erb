<h1 class="page-header">Spotify Demo</h1>
<%= form_tag spotify_artists_path, method: "get", html: { class: "form" } do %>
 <div class="form-group col-xs-4 spotify-search">
   <%= text_field_tag(:artist_name, "", placeholder: "Enter artist name", class: "form-control enter-search-sportify") %>
 </div>
 <button type="button" class="btn btn-primary go-search-sportify">Primary</button>
<% end %>